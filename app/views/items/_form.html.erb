<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name,class:"form-control" %>
  </div>

  <div class = "form-group">
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category,class:"form-control" %>
  </div>

  <div class = "form-check form-check-inline mt-1 mb-3">
    <%= form.label :enable, class:"form-check-label pr-2" %>
    <%= form.check_box :enable,class:"form-check-input"  %>
  </div>

  <div class = "form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class = "form-group">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
