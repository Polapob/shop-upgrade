<%= form_for :market, url: '/market' do |form| %>
        <h2>Update_Item_for_sale</h2>
        <div class="form-group">
         <%= form.label :price %>
         <%= form.text_field :price,class:"form-control",placeholder:"Price", required: true %>
        </div>
        <div class="form-group">
          <%= form.label :stock %>
          <%= form.text_field :stock,class:"form-control",placeholder:"Stock", required: true %>
        </div>

        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.hidden_field :item_id, value: @item.id %>
        
        <%=  submit_tag("Put for sale", :class => "btn btn-primary") %>
<% end %>