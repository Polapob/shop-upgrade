<%= form_for :market, url: '/markets' do |form| %>
        <h2>Update_Item_for_sale</h2>
        <div class="form-group">
         <%= form.label :price %>
         <%= form.text_field :price,class:"form-control",placeholder:"Price", required: true %>
        </div>
        <div class="form-group">
          <%= form.label :stock %>
          <%= form.text_field :stock,class:"form-control",placeholder:"Stock", required: true %>
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password,class:"form-control",placeholder:"Password", required: true %>
        </div>
        <%=  submit_tag("Create Account", :class => "btn btn-primary") %>
<% end %>