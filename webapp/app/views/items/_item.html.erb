    
  <tr>
      <td> <%= item.name %></td>
      <td><%= image_tag(item.image,style:"width:100px;height:100px") %></td>
      <td> <%= item.category %></td>
      <td> <%= item.enable %></td>
      <td> <%= item.user_id %></td>
      <td> <%= link_to "Show" ,item_path(item),class:"btn btn-primary" %> </td>
      <td> <%= link_to "Edit" ,edit_item_path(item),class:"btn btn-primary" %> </td>
      <td> <%= button_to "Destroy this item", item, method: :delete,class:"btn btn-danger" %></td>
  </tr>
  
