<%= form_for :user, url: '/users' do |form| %>
        <h2> Sign Up </h2>
        <div class="form-group">
         <%= form.label :name %>
         <%= form.text_field :name,class:"form-control",placeholder:"Name", required: true %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email,class:"form-control",placeholder:"Email", required: true %>
        </div>
         <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password,class:"form-control",placeholder:"Password", required: true %>
        </div>

    <%= form.label :user_type %>
       <%= form.select :user_type, options_for_select([
  "admin", 
  "seller", 
  "buyer"]), 
  {}, { class: "form form-group form-control w-100",required:true } %>
   
        <%=  submit_tag("Create Account", :class => "btn btn-primary") %>
<% end %>